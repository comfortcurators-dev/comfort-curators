# Environment Variables for Comfort Curators
# Copy this file to .env.local and fill in the values

# Supabase - Required
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Map Tiles - Required
# Example: https://api.maptiler.com/maps/streets-v2/{z}/{x}/{y}.png?key=YOUR_KEY
NEXT_PUBLIC_MAP_TILE_URL_TEMPLATE=https://tile.openstreetmap.org/{z}/{x}/{y}.png
NEXT_PUBLIC_MAP_ATTRIBUTION=Â© OpenStreetMap contributors

# Cron Security - Required for production
CRON_SECRET=

# Stripe - Required for billing
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Gemini AI - Required for AI features
# Get from: https://aistudio.google.com/app/apikey
GEMINI_KEY_A=
GEMINI_KEY_B=
AI_MODEL_NAME=gemini-2.5-flash

# Encryption - Required
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# App Config
NEXT_PUBLIC_APP_NAME=Comfort Curators
